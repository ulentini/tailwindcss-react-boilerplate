{
  "name": "tailwindcss-react-boilerplat",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-scripts": "2.1.1"
  },
  "scripts": {
    "build:css": "postcss src/css/tailwind.src.css -o src/tailwind.css",
    "watch:css": "postcss src/css/tailwind.src.css -o src/tailwind.css -w",

    "start": "yarn watch:css & react-scripts start",
    "build": "yarn build:css && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "autoprefixer": "^9.4.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.6",
    "postcss-cli": "^6.0.1",
    "postcss-nested": "^4.1.1",
    "tailwindcss": "^0.7.3"
  }
}
